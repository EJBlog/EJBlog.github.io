---
---
[  {% if page.url == "/all_posts_jake.html" %}
    {% assign posts = site.posts | where: "post_author","Jake Ellis" %}
  {% elsif page.url == "/all_posts_evan.html" %}
    {% assign posts = site.posts | where: "post_author","Evan Neises" %}
  {% else  %}
    {% assign posts = site.posts %}
  {% endif %}
  {% for post in posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.post_category | escape }}",
      "url"      : "{{post.url | escape }}",
      "page_url" : "{{page.url | escape}}",
      "date"     : "{{ post.date | escape}}",
      "author"   : "{{ post.post_author | escape }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
